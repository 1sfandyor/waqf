                <img src="assets/images/heading-img.png" alt="icon"  width="60" height="75">
                <h2>Bildiriler</h2>
            </div>
            
            <div class="row">
                <% if (typeof latestNews !== 'undefined' && latestNews && latestNews.length > 0) { %>
                    <% 
                    // Faqat "notes" kategoriyasidagi yangiliklar
                    const bildirilerNews = latestNews.filter(news => news.category === 'notes');
                    
                    if (bildirilerNews.length > 0) {
                        bildirilerNews.forEach(function(news) { 
                    %>
                        <div class="col-lg-4 col-md-6">
                            <div class="blog hoverimg bg-white">
                                <h4><%= new Date(news.createdAt).getDate() %><span><%= new Date(news.createdAt).toLocaleString('tr-TR', { month: 'long', year: 'numeric' }) %></span></h4>
                                <figure>
                                    <img src="<%= news.image %>" alt="<%= news.title %>" width="400" height="260" class="w-100 object-fit-cover">
                                </figure>
                                <h5><a href="/news/<%= news.slug %>"><%= news.title %></a></h5>
                                <p style="text-align: justify;">
                                    <% 
                                    // HTML teglarni olib tashlash
                                    let cleanContent = news.content.replace(/<\/?[^>]+(>|$)/g, '');
                                    
                                    // HTML maxsus belgilarni tozalash
                                    cleanContent = cleanContent
                                      .replace(/&ldquo;|&rdquo;|&quot;/g, '"')
                                      .replace(/&lsquo;|&rsquo;/g, "'")
                                      .replace(/&gt;/g, '>')
                                      .replace(/&lt;/g, '<')
                                      .replace(/&amp;/g, '&')
                                      .replace(/&nbsp;/g, ' ')
                                      .replace(/&mdash;/g, '—')
                                      .replace(/&ndash;/g, '–')
                                      // Turkcha va boshqa maxsus harflar uchun
                                      .replace(/&uuml;/g, 'ü')
                                      .replace(/&ouml;/g, 'ö')
                                      .replace(/&ccedil;/g, 'ç')
                                      .replace(/&Uuml;/g, 'Ü')
                                      .replace(/&Ouml;/g, 'Ö')
                                      .replace(/&Ccedil;/g, 'Ç')
                                      .replace(/&auml;/g, 'ä')
                                      .replace(/&Auml;/g, 'Ä')
                                      .replace(/&euml;/g, 'ë')
                                      .replace(/&Euml;/g, 'Ë')
                                      .replace(/&iuml;/g, 'ï')
                                      .replace(/&Iuml;/g, 'Ï')
                                      .replace(/&acirc;/g, 'â')
                                      .replace(/&Acirc;/g, 'Â')
                                      .replace(/&ecirc;/g, 'ê')
                                      .replace(/&Ecirc;/g, 'Ê')
                                      .replace(/&icirc;/g, 'î')
                                      .replace(/&Icirc;/g, 'Î')
                                      .replace(/&ocirc;/g, 'ô')
                                      .replace(/&Ocirc;/g, 'Ô')
                                      .replace(/&ucirc;/g, 'û')
                                      .replace(/&Ucirc;/g, 'Û')
                                      .replace(/&#[0-9]+;/g, match => String.fromCharCode(match.replace(/[&#;]/g, '')))
                                      .replace(/\s+/g, ' ')
                                      .trim();
                                      
                                    // TinyMCE paragraph elementlarini ajratish
                                    // <p> teglaridan tozalangan matndagi qatorlarni paragraflar sifatida ajratish
                                    let paragraphs = [];
                                    
                                    try {
                                      // Avval paragraf teglarini o'rnini belgilash
                                      let tempContent = news.content.replace(/<\/p>/gi, '</p>\n\n');
                                      // HTML teglarni tozalash
                                      tempContent = tempContent.replace(/<\/?[^>]+(>|$)/g, '');
                                      // Maxsus belgilarni tozalash
                                      tempContent = tempContent.replace(/&nbsp;/g, ' ');
                                      // Paragraflarni ajratish
                                      paragraphs = tempContent.split(/\n\n+/).filter(p => p.trim() !== '');
                                      
                                      // Agar paragraflar kam topilsa, bo'sh joylar bo'yicha bo'lish
                                      if (paragraphs.length <= 1) {
                                        paragraphs = cleanContent.split(/\s{2,}/).filter(p => p.trim() !== '');
                                      }
                                      
                                      // Agar bu ham ishlalmasa, belgilar sonini cheklash
                                      if (paragraphs.length <= 1) {
                                        const maxCharsPerParagraph = 150;
                                        paragraphs = [];
                                        for (let i = 0; i < Math.min(cleanContent.length, 3 * maxCharsPerParagraph); i += maxCharsPerParagraph) {
                                          paragraphs.push(cleanContent.substring(i, i + maxCharsPerParagraph));
                                        }
                                      }
                                    } catch (e) {
                                      paragraphs = [cleanContent];
                                    }
                                    
                                    // Faqat birinchi 3 paragrafni olish
                                    const displayedContent = paragraphs.slice(0, 3).join('\n\n');
                                    %>
                                    <%= cleanContent.substring(0, 140) %>...
                                </p>
                            </div>
                        </div>
                    <% }); 
                    } else { %>
                        <div class="col-12">
                            <p>Bildiriler topilmadi</p>
                        </div>
                    <% }
                } else { %>
                    <div class="col-12">
                        <p>Yangilik topilmadi</p>
                    </div>
                <% } %>
            </div>
        </div>
