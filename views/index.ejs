    <!-- JavaScript -->
    <script>
        // JavaScript countdown uchun
        document.addEventListener('DOMContentLoaded', function() {
            let countDownDate;
            
            if (typeof activeCampaign !== 'undefined' && activeCampaign) {
                // Kampaniya sanasini millisekund formatiga o'tkazish
                countDownDate = new Date("<%= activeCampaign.eventDate %>").getTime();
            } else {
                // Standart sana (June 6, 2025)
                countDownDate = new Date("June 6, 2025").getTime();
            }
            
            // Har sekundda sanashtiruvchini yangilash
            const x = setInterval(function() {
                // Joriy vaqtni olish
                const now = new Date().getTime();
                
                // Joriy vaqt bilan sanashtiruv vaqti orasidagi farqni topish
                const distance = countDownDate - now;
                
                // Kunlar, soatlar, minutlar va sekundlar uchun hisoblash
                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);
                
                // Natijani ko'rsatish
                document.getElementById("days").textContent = days;
                document.getElementById("hours").textContent = hours;
                document.getElementById("minutes").textContent = minutes;
                document.getElementById("seconds").textContent = seconds;
                
                // Agar sanashtiruv tugagan bo'lsa
                if (distance < 0) {
                    clearInterval(x);
                    document.getElementById("countdown").innerHTML = "<p>Vaqt tugadi!</p>";
                }
            }, 1000);
        });
    </script>
