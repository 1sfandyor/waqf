<%- include('../../partials/admin/header') %>

<!-- ========== title-wrapper start ========== -->
<div class="title-wrapper pt-30 container">
  <div class="row align-items-center">
    <div class="col-md-6">
      <div class="title">
        <h2>Yangi Slayder Qo'shish</h2>
      </div>
    </div>
    <!-- end col -->
    <div class="col-md-6">
      <div class="breadcrumb-wrapper">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/admin">Admin</a>
            </li>
            <li class="breadcrumb-item">
              <a href="/admin/sliders">Slayderlar</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              Yangi qo'shish
            </li>
          </ol>
        </nav>
      </div>
    </div>
    <!-- end col -->
  </div>
  <!-- end row -->
</div>
<!-- ========== title-wrapper end ========== -->

<div class="card-style mb-30 container">
  <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
    <h5 class="mb-0">Yangi Slayder ma'lumotlari</h5>
    <a href="/admin/sliders" class="main-btn light-btn btn-hover btn-sm">
      <i class="lni lni-arrow-left me-2"></i> Orqaga
    </a>
  </div>
  
  <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
    <div class="alert-box danger-alert">
      <div class="alert">
        <p class="text-medium"><%= error_msg %></p>
        <button class="close-btn" onclick="this.parentElement.parentElement.remove()">
          <i class="lni lni-close"></i>
        </button>
      </div>
    </div>
  <% } %>
  
  <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <div class="alert-box danger-alert">
      <div class="alert">
        <ul class="mb-0">
          <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
          <% }); %>
        </ul>
        <button class="close-btn" onclick="this.parentElement.parentElement.remove()">
          <i class="lni lni-close"></i>
        </button>
      </div>
    </div>
  <% } %>

  <div class="row">
    <div class="col-12">
      <form method="POST" action="/admin/sliders/create" enctype="multipart/form-data">
        <div class="row">
          <div class="col-md-8">
            <div class="select-style-1 mb-3">
              <label class="mb-2">Sarlavha turi</label>
              <div class="select-position select-sm">
                <div class="form-check radio-style mb-2">
                  <input class="form-check-input" type="radio" name="titleType" id="titleTypeText" value="text" checked onclick="toggleTitleType()">
                  <label class="form-check-label" for="titleTypeText">
                    Matn sarlavha qo'shish
                  </label>
                </div>
                <div class="form-check radio-style mb-2">
                  <input class="form-check-input" type="radio" name="titleType" id="titleTypeImage" value="image" onclick="toggleTitleType()">
                  <label class="form-check-label" for="titleTypeImage">
                    Rasm sarlavha qo'shish
                  </label>
                </div>
              </div>
            </div>

            <!-- Matn sarlavha -->
            <div class="input-style-1 mb-3" id="titleTextBlock">
              <label>Sarlavha (ixtiyoriy)</label>
              <input type="text" name="title" value="<%= typeof slider != 'undefined' && slider.title ? slider.title : '' %>">
            </div>

            <!-- Rasm sarlavha -->
            <div class="input-style-1 mb-3" id="titleImageBlock" style="display:none;">
              <label>Sarlavha rasmi (ixtiyoriy)</label>
              <input type="file" name="titleImage" accept="image/*" class="form-control">
              <small class="text-muted">Tavsiya etilgan o'lcham: 400x152</small>
              <div class="mt-2">
                <img id="titleImagePreview" src="#" alt="Oldindan ko'rish" style="max-width: 100%; display: none;">
              </div>
            </div>

            <div class="input-style-1 mb-3">
              <label>Tavsif (ixtiyoriy)</label>
              <textarea name="description" rows="3"><%= typeof slider != 'undefined' && slider.description ? slider.description : '' %></textarea>
            </div>

            <div class="input-style-1 mb-3">
              <label>Tugma matni (ixtiyoriy)</label>
              <input type="text" name="buttonText" value="<%= typeof slider != 'undefined' && slider.buttonText ? slider.buttonText : '' %>">
            </div>

            <div class="input-style-1 mb-3">
              <label>Tugma havolasi (ixtiyoriy)</label>
              <input type="text" name="buttonLink" value="<%= typeof slider != 'undefined' && slider.buttonLink ? slider.buttonLink : '#' %>">
            </div>

            <div class="select-style-1 mb-3">
              <label class="mb-2">Status</label>
              <div class="select-position select-sm">
                <div class="form-check radio-style mb-2">
                  <input class="form-check-input" type="radio" name="active" id="activeYes" value="true" <%= typeof slider == 'undefined' || slider.active ? 'checked' : '' %>>
                  <label class="form-check-label" for="activeYes">
                    Aktiv
                  </label>
                </div>
                <div class="form-check radio-style mb-2">
                  <input class="form-check-input" type="radio" name="active" id="activeNo" value="false" <%= typeof slider != 'undefined' && !slider.active ? 'checked' : '' %>>
                  <label class="form-check-label" for="activeNo">
                    Faol emas
                  </label>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-4">
            <div class="input-style-1 mb-3">
              <label>Rasm</label>
              <input type="file" id="image" name="image" accept="image/*" required class="form-control">
              <small class="text-muted">Tavsiya etilgan o'lcham: 1920x780</small>
              <div class="mt-2">
                <img id="imagePreview" src="#" alt="Oldindan ko'rish" style="max-width: 100%; display: none;">
              </div>
            </div>
          </div>
        </div>

        <div class="d-flex justify-content-end">
          <button type="submit" class="main-btn primary-btn btn-hover">
            <i class="lni lni-save me-2"></i> Saqlash
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../../partials/admin/footer') %>

<script>
  // Rasm oldindan ko'rish
  document.getElementById('image').onchange = function(event) {
    var reader = new FileReader();
    reader.onload = function() {
      var output = document.getElementById('imagePreview');
      output.src = reader.result;
      output.style.display = 'block';
    };
    reader.readAsDataURL(event.target.files[0]);
  };

  // Sarlavha rasm oldindan ko'rish
  document.getElementById('titleImage').onchange = function(event) {
    var reader = new FileReader();
    reader.onload = function() {
      var output = document.getElementById('titleImagePreview');
      output.src = reader.result;
      output.style.display = 'block';
    };
    reader.readAsDataURL(event.target.files[0]);
  };

  // Sarlavha turini almashtirish
  function toggleTitleType() {
    var titleTextBlock = document.getElementById('titleTextBlock');
    var titleImageBlock = document.getElementById('titleImageBlock');
    
    if (document.getElementById('titleTypeText').checked) {
      titleTextBlock.style.display = 'block';
      titleImageBlock.style.display = 'none';
    } else {
      titleTextBlock.style.display = 'none';
      titleImageBlock.style.display = 'block';
    }
  }
</script> 